@using Microsoft.AspNetCore.Identity
@using PhotoExhibiter.Models.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
        <a class="notifications">
          <a href="#">
          <div id = "fa_globe"></div>
          <span class="badge js-notifications-count hide"></span>
        </a>
    </li>

    <li class="nav-item dropdown">
      <form asp-area="" asp-controller="Account" asp-action="Logout"
        method="post" id="logoutForm">
          <a href="#" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User) <span class="caret"></span></a>

          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
             <a class="dropdown-item" href="@Url.Action("Mine",
              "Exhibits")">My UpcomingExhibits</a>
             <a class="dropdown-item" href="@Url.Action("Attending",
              "Exhibits")">Exhibits I'm Attending</a>
             <a class="dropdown-item" href="@Url.Action("Followees",
              "Followees")">Photographers I'm Following</a>
             <li role="separator" class="divider"></li>
             <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
          </div >
      </form>
    </li>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
    </ul>
}
