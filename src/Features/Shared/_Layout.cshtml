<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans:400" rel="stylesheet">
    <link rel="stylesheet" href="~/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/file-uploader/5.15.5/fine-uploader-new.css" rel="stylesheet">
    <style>
      body {
        display: flex;
        min-height: 100vh;
        flex-direction: column;
      }
      main {
        flex: 1;
      }

      .card-container {
        position: relative;
        display: flex;
        align-items: center;
        vertical-align: middle;
        overflow: hidden;
        height: 200px;
        width: 100%;
      }
      .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0);
        transition: background 0.5s ease;
      }
      .card-container:hover .card-overlay {
        display: block;
        background: rgba(0, 0, 0, .3);
      }
      .card img {
        position: absolute;
        height: 200px;
        overflow: hidden;
        top: 50%;
        left: 0;
      }
      .card-title {
        position: absolute;
        width: 100%;
        left: 0;
        top: 45px;
        font-weight: 400;
        font-size: 20px;
        text-align: center;
        text-transform: uppercase;
        color: white;
        z-index: 1;
        transition: top .5s ease;
      }
      .card-container:hover .card-title {
        top: 50px;
      }
      .card-container:hover .card-button {
        opacity: 1;
      }

      .exhibits {
        list-style: none;
      }
      .exhibits > li {
        position: relative;
        margin-bottom: 30px;
      }
      .exhibits > li .date {
        background: #fd5d5d;
        color: white;
        text-align: center;
        width: 90px;
        height: 95px;
        box-shadow: 0 3px 4px 0 rgba(0, 0, 0, .14), 0 3px 3px -2px rgba(0, 0, 0, .2), 0 1px 8px 0 rgba(0, 0, 0, .12);
      }
      .exhibits > li .date .month {
        text-transform: uppercase;
        font-size: 14px;
        font-weight: bold;
        padding: 2px 6px;
      }
      .exhibits > li .date .day {
        background: #f7f7f7;
        color: #333;
        font-size: 30px;
        height: 70px;
        padding: 10px 12px;
      }
      .exhibits > li .details {
        position: absolute;
        top: 0;
        left: 110px;
      }
      .exhibits > li .details .photographer {
        font-weight: bold;
        display: block;
      }
      .exhibits > li .details .genre {
        font-size: 15px;
      }
      .exhibits > li .actions {
        font-size: 15px;
        display: none;
      }
      .exhibits > li:hover .actions {
        display: block;
      }

    </style>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">

      <ul class="navbar-nav flex-row">
        <button class="navbar navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </ul>

      <a asp-area="" asp-controller="Home" asp-action="Index"
        class="navbar-brand pull-right changeFont">
        <img id="logo_sm" height="45" class="d-inline-block
        align-bottom" alt="">
        PhotoExhibiter
      </a>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Exhibits" asp-action="Create">
              Add an Exhibit</a>
          </li>
        </ul>

        <ul class="navbar-nav mr-auto d-none d-md-block mx-2 my-auto w-50">
          @RenderSection("search", required: false)
        </ul>

        <ul class="navbar-nav ml-auto">

          <div class="nav-item ">
            <a id="notifications-item" class="notifications" href="#">
              <div id = "fa_globe">globe</div>
              <span class="badge js-notifications-count hide"></span>
            </a>
          </div>
          @await Html.PartialAsync("_LoginPartial")
        </ul>

      </div>

    </nav>

    @await Html.PartialAsync("_NavbarPartial")

    <main>
      @RenderBody()
    </main >

    <footer class="container">
      <hr />
      <p>&copy; 2017 - Web</p>
    </footer>

    <script type="text/javascript" src="~/node-static.js"></script>
    <script type="text/javascript" src="~/main.js"></script>

    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $.getJSON("/api/notifications", function (notifications) {
                if (notifications.length == 0)
                    return;
                $(".js-notifications-count")
                    .text(notifications.length)
                    .removeClass("hide");
                $(".notifications").popover({
                    html: true,
                    title: "Notifications",
                    content: function () {
                        var compiled = _.template($("#notifications-template").html());
                        return compiled({ notifications: notifications });
                    },
                    placement: "left",
                    template: '<div class="popover popover-notifications" role="tooltip"><div class="arrow"></div><h3 class="popover-header"></h3><div class="popover-body"></div></div>'
                }).on("shown.bs.popover", function() {
                    $.post("/api/notifications/")
                        .done(function () {
                            $(".js-notifications-count")
                                .text("")
                                .addClass("hide");
                        });
                });
            });
        });
    </script>

  </body>

</html>
