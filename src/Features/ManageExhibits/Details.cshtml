@model PhotoExhibiter.Features.ManageExhibits.ExhibitViewModel
@{
    ViewBag.Title = "Edit Exhibit";
}

<h2 class="text-center mt-3 mb-3">@Model.Photographer's exhibit</h2>

<main class="container">
  <div class="row mt-4">
    <div class="col-lg-6 col-sm-12 push-sm-12 px-4">
      <ul class="list-group">
        <li class="list-group-item">Photographer: @Model.Photographer</li>
        <li class="list-group-item">Genre: @Model.Genre</li>
        <li class="list-group-item">Location: @Model.Location</li>
        <li class="list-group-item">Date: @Model.Date</li>
        <li class="list-group-item">IsCanceled: @Model.IsCanceled</li>
      </ul>
      <div class= "text-lg-left text-md-center">
        <a class="btn btn-secondary" asp-action="Index">Go Back</a>
      </div>
      </br>
    </div>
    <div class="text-center col-lg-6 col-sm-12 px-4">
      @if (String.IsNullOrEmpty(Model.ImageUrl))
      {
         <img src="http://placehold.it/600x400" class="img-target"
         style="max-height:600px; max-width:400px" />
      }
      else
      {
        <img src="@Model.ImageUrl" class="img-target"
        style="max-heigth:600px; max-width:400px" />
      }
    </div>
  </div>
</main>
