@model IEnumerable<PhotoExhibiter.Entities.Exhibit>

<h2>Application Users</h2>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#exhibits").DataTable({
                ajax: {
                    url: "/api/manageexhibits",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, user) {
                            return "<a href='/manageusers/edit/" + user.id + "'>" +
                            user.name + "</a>";
                       }
                    },
                    {
                        data: "name",
                        render: function(data, type, user) {
                            return "<a href='/manageusers/edit/" + user.id + "'>" +
                            user.name + "</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function(data) {
                            return "<button class='btn btn-secondary js-delete' data-user-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });


            $("#users").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this user?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/manageusers/" + button.attr("data-user-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
