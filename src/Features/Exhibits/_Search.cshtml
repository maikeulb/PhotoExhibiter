@using PhotoExhibiter.Features.Exhibits
@model Index.Model


<form asp-controller="Exhibits" asp-action="Search">
  <div class="form-horizontal">
    <div id="search-exhibits" class="input-group">
      <input asp-for"SearchTerm" class="form-control" placement="Search..">
      <button class="btn btn-outline-success" type="submit" data-toggle="tooltip" data-placement="bottom" title="Search by photographer, location, or genre">Search</button>
    </div>
  </div>
</form>

