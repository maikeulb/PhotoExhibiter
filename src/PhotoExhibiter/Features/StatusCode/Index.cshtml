@model int
@{
    var statusCode = Model;
    var statusmessage = "";
    switch (statusCode)
    {
        case 400:
            statusmessage = "Bad request: The request cannot be fulfilled due to bad syntax";
            break;
        case 403:
            statusmessage = "Forbidden";
            break;
        case 404:
            statusmessage = "Page not found";
            break;
        case 408:
            statusmessage = "The server timed out waiting for the request";
            break;
        default:
            statusmessage = "Thatâ€™s odd... Something we didn't expect happened";
            break;
    }
}

<main class="container mt-4">
  <header>
    <h1 class="text-center text-danger">Error @Model</h1>
    <p class="text-center text-danger">@statusmessage</p>
  </header>
</main>
