@using PhotoExhibiter.Models.Entities
@model IEnumerable<Exhibit>
@{
    ViewBag.Title = "Mine";
}

<h1>My Upcoming Exhibits</h1>
<ul class="exhibits voffset4">
    @foreach (var exhibit in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @exhibit.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @exhibit.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="photographer">
                    @exhibit.Location
                </span>
                <span class="genre">
                    @exhibit.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Exhibits", new { Id =
                      exhibit.Id })">
                        Edit
                    </a>
                    <a href="#" class="js-cancel-exhibit"
                      data-exhibit-id="@exhibit.Id">
                        Cancel
                    </a>
                </div>
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-exhibit").click(function (e) {
                var link = $(e.target);

                bootbox.dialog({
                    message: "Are you sure you want to cancel this Exhibit?",
                    title: "Confirm",
                    buttons: {
                        no: {
                            label: "No",
                            className: "btn-default",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: "btn-danger",
                            callback: function () {
                                $.ajax({
                                    url: "/api/exhibits/" +
                                    link.attr("data-exhibit-id"),
                                    method: "DELETE"
                                })
                                .done(function () {
                                    link.parents("li").fadeOut(function () {
                                        $(this).remove();
                                    });
                                })
                                .fail(function () {
                                    alert("Something failed!");
                                });
                            }
                        }
                    }
                });
            });
        });
    </script>
}
