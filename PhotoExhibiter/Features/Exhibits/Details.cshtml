@using PhotoExhibiter.Features.Exhibits
@model Attending.Model
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    @Model.Exhibit.Photographer.Name
    @if (User.Identity.IsAuthenticated)
    {
        if (Model.IsFollowing)
        {
            <button class="btn btn-info js-toggle-follow"
              data-user-id="@Model.Exhibit.PhotographerId">Following</button>
        }
        else
        {
            <button class="btn btn-default js-toggle-follow"
              data-user-id="@Model.Exhibit.PhotographerId">Follow</button>
        }
    }
</h2>
<p>
    Performing at @Model.Exhibit.location on
    @Model.Exhibit.DateTime.ToString("d MMM") at @Model.Exhibit.DateTime.ToString("HH:mm")
</p>

@if (User.Identity.IsAuthenticated && Model.IsAttending)
{
    <p>You are going to this event. </p>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            ExhibitDetailsController.init();
        });
    </script>
}




