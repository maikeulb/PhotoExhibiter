@model IEnumerable<PhotoExhibiter.Models.exhibit>
@{
    ViewData["Title"] = "Home Page";
}

<ul class="exhibits">
    @foreach (var exhibit in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @exhibit.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @exhibit.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="photographer">
                    @exhibit.Photographer.Name
                </span>
                <span class="genre">
                    @exhibit.Genre.Name
                </span>
            </div>
        </li>
    }
</ul>
